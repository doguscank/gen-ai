[MASTER]
jobs=4

ignore=tests,migrations

[MESSAGES CONTROL]
disable=
    missing-docstring,
    too-few-public-methods,
    invalid-name,
    too-many-arguments,
    too-many-instance-attributes,
    too-many-locals,
    line-too-long,
    too-many-positional-arguments,
    logging-fstring-interpolation,
    too-many-return-statements,
    too-many-branches,
    too-many-lines,
    redefined-builtin,
    too-many-statements,
    fixme,
    duplicate-code,

[FORMAT]
max-line-length=88

[TYPECHECK]
generated-members=numpy.*,torch.*,cv2.*, open3d.*

[REPORTS]
output-format=colorized

reports=no

[SIMILARITIES]
min-similarity-lines=5
